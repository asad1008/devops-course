{
  "builders": [{
    "type": "azure-arm",

    "client_id": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
    "client_secret": "zzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzz",
    "tenant_id": "yyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyy",
    "subscription_id": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxx",

    "managed_image_resource_group_name": "TestRGpacker",
    "managed_image_name": "LinuxImage_v22",

    "os_type": "Linux",
    "image_publisher": "Canonical",
    "image_offer": "UbuntuServer",
    "image_sku": "22.04-LTS", //verify az size in azure portal

    "azure_tags": {
        "dept": "T-packerLinux",
        "task": "Image deployment"
    },

    "location": "norwayeast",
    "vm_size": "Standard_DS2_v2"   //verify azure size in azure portal
  }],
  "provisioners": [{
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
    "inline": [
      "apt-get update",
      "apt-get upgrade -y",
      "apt-get -y install nginx",

      "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
    ],
    "inline_shebang": "/bin/sh -x",
    "type": "shell"
  }]
}
